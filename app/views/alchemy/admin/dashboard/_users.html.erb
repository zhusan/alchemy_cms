<div class="widget">
  <h2><%= _t('Who else is online') %>:</h2>
  <table>
  <% if @online_users.blank? %>
    <tr class="even">
      <td><%= _t('no users') %></td>
    </tr>
  <% else %>
    <% @online_users.each do |user| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= user.name %></td>
      <td>
        <small><%= user.human_roles_string %></small>
      </td>
    </tr>
    <% end %>
  <% end %>
  </table>
</div>
